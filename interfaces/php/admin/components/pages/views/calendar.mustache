{{#banner_main_content}}
	<div class="introductorybanner"><div class="titlespc">{{{banner_title_content}}}</div>
	{{{banner_main_content}}}
	<div class="closelink"><a href="?hidebanner=true">close <span class="icon x_alt"></span></a></div></div>
{{/banner_main_content}}

<div class="col_oneoftwo">
	<h2>This week at a glance</h2>
	{{#events_thisweek}}
	<ul class="alternating">
		{{#events_thisweek}}
		<li>
			<b>{{formatted_date}}: {{event_location}}</b> <span class="nobr">@ {{venue_name}}</span>
			<div class="itemnav">
				<a href="{{www_path}}/calendar/events/edit/{{event_id}}" class="mininav_flush"><span class="icon magnifying_glass"></span> Details</a> 
			</div>
		</li>
		{{/events_thisweek}}
	</ul>
	{{/events_thisweek}}

	{{^events_thisweek}}
	<p>No upcoming events for the next week were found.</p>
	{{/events_thisweek}}
</div>

<div class="col_oneoftwo lastcol">
	<h2>Unpublished events</h2>
	{{#events_unpublished}}
	<ul class="alternating">
		{{#events_unpublished}}
		<li>
			<b>{{formatted_date}}: {{event_location}}</b> <span class="nobr">@ {{venue_name}}</span>
			<div class="itemnav">
				<a href="{{www_path}}/calendar/events/edit/{{event_id}}" class="mininav_flush"><span class="icon magnifying_glass"></span> Details</a> 
			</div>
		</li>
		{{/events_unpublished}}
	</ul>
	{{/events_unpublished}}

	{{^events_unpublished}}
	<p>No unpublished events were found.</p>
	{{/events_unpublished}}
</div>